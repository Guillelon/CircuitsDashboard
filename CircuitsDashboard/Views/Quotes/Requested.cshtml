@{ 
    ViewBag.Controller = "Quotes";
    ViewBag.Action = "Requested";
}
<div class="card">
    <div class="card-body">
        <div style="text-align:right">
            <button id="createButton" class="btn btn-primary">Create</button>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-2">

            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-header" style="text-align:center; background-color:#26A69A; color:white">
                        <h4>Open Quotes</h4>
                    </div>
                    <div class="card-body" style="padding-top:15px">
                        <div style="text-align:center">
                            <h2 class="font-weight-semibold">32</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2">

            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-header" style="text-align:center; background-color:#26A69A; color:white">
                        <h4>Current Open Tasks</h4>
                    </div>
                    <div class="card-body" style="padding-top:15px">
                        <div style="text-align:center">
                            <h2 class="font-weight-semibold">3</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2">

            </div>
        </div>
        <div class="row" style="margin-top: 100px">
            <div class="col-lg-2">

            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-header" style="text-align:center; background-color:red; color:white">
                        <h4>Alerts</h4>
                    </div>
                    <div class="card-body" style="padding-top:15px">
                        <div style="text-align:center">
                            <h2 class="font-weight-semibold">0</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2">

            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-header" style="text-align:center; background-color:grey; color:white">
                        <h4>??</h4>
                    </div>
                    <div class="card-body" style="padding-top:15px">
                        <div style="text-align:center">
                            <h2 class="font-weight-semibold">0</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2">

            </div>
        </div>
    </div>
</div>

<div id="myModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" style="max-width: 1200px" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Quote Request</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6" style="text-align:right;padding-top:5px">
                                <label>Date Requested</label>
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6" style="text-align:right;padding-top:5px">
                                <label>Search Type</label>
                            </div>
                            <div class="col-md-6">
                                <select class="form-control">
                                    <option>Type 1</option>
                                    <option>Type 2</option>
                                    <option>Type 3</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6" style="text-align:right;padding-top:5px">
                                <label>Network Design</label>
                            </div>
                            <div class="col-md-6">
                                <select class="form-control">
                                    <option>Design 1</option>
                                    <option>Design 2</option>
                                    <option>Design 3</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6" style="text-align:right;padding-top:5px">
                                <label>Bandwidth Required</label>
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6" style="text-align:right;padding-top:5px">
                                <label>Terms</label>
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-4" style="text-align:right;padding-top:5px">
                                <label>Customer of Record</label>
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4" style="text-align:right;padding-top:5px">
                                <label>Site</label>
                            </div>
                            <div class="col-md-6">
                                <input class="form-control" />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4" style="text-align:right;padding-top:5px">
                                <label>Site Info</label>
                            </div>
                            <div class="col-md-6">
                               <textarea rows="4" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Send to Service Provider</button>
                &nbsp;&nbsp;
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#createButton').click(function () {
            $('#myModal').modal('show');
        });
    });
</script>